<table class="table" id="remain-list-table">
  <BR />
  <col style="width:20%">
  <col style="width:20%">
  <col style="width:20%">
  <!-- <col style="width:20%"> -->
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Entombment</th>
      <!-- <th>Location</th> -->
      <th>Date of Death</th>
      <!-- <th>Owner</th> -->
    </tr>
  </thead>

    <tbody>
      {{#each remains as |remain|}}
        <tr data-id="{{remain.id}}">
          <td>{{null}}</td>
          <td>{{remain.given_name}} {{remain.sur_name}}</td>
          <td>{{remain.entombment}}</td>
          <!-- <td>{{remain.location}}</td> -->
          <td>{{remain.dod}}</td>

          <td class="hideMe">{{remain._owner}}</td>
          <!-- <td>{{remain.question1}}</td> -->
          <!-- <td class="glyphicon"><button type="button" class="remove-remain btn btn-default glyphicon" data-id="{{remain.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></td> -->
          <td class="glyphicon"><button type="button" class="remove-remain btn glyphicon" data-id="{{remain.id}}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></td>
          <td class="glyphicon"><button type="button" class="update-remain btn glyphicon" data-id="{{remain.id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
          <td class="glyphicon"><button type="button" id="{{remain.id}}" class="view-remain see-response btn glyphicon" data-id="{{remain.id}}"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></button></td>

      </tr>
    </tbody>

    {{/each}}

  </table>
